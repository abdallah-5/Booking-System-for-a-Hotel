@model Client

@{
    ViewData["Title"] = "Create Category";
}

<form action="Create" method="post">
    <div class="text-danger" asp-validation-summary="ModelOnly"></div>

    <div class="form-group row mt-2">
        <div class="col-12 col-md-3 col-lg-2">
            <label asp-for="Name" class="col-form-label"></label>
        </div>
        <div class="col-12 col-md-8 col-lg-5">
            <input asp-for="Name" class="form-control" />
            
        </div>
    </div>

    <div class="form-group row mt-2">
        <div class="col-12 col-md-3 col-lg-2">
            <label asp-for="Phone" class="col-form-label"></label>
        </div>
        <div class="col-12 col-md-8 col-lg-5">
            <input asp-for="Phone" class="form-control" />

        </div>
    </div>

    <div class="form-group row mt-2">
        <div class="col-12 col-md-3 col-lg-2">
            <label asp-for="Email" class="col-form-label"></label>
        </div>
        <div class="col-12 col-md-8 col-lg-5">
            <input asp-for="Email" class="form-control" />

        </div>
    </div>

    <div class="form-group row mt-2">
        <div class="col-12 col-md-3 col-lg-2">
            <label asp-for="PassportId" class="col-form-label"></label>
        </div>
        <div class="col-12 col-md-8 col-lg-5">
            <input asp-for="PassportId" class="form-control" />

        </div>
    </div>
    <div class="form-group row mt-3">
        <div class="col-12 col-md-8 col-lg-5 offset-md-3 offset-lg-2">
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-lg"></i>
                Submit
            </a>
        </div>
    </div>
</form>