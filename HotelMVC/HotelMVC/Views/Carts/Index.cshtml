@model IEnumerable<Cart>

@{
    ViewData["Title"] = "Cart";
}

<!-- Breadcrumb Section Begin -->
<div class="breadcrumb-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-text">
                    <h2>Your Reservations</h2>
                    
                    <div class="bt-option">
                        <a href="./home.html">Home</a>
                        <span>Cart</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Breadcrumb Section End -->
<!-- Rooms Section Begin -->
<section class="rooms-section spad">
    <div class="container">
        <div class="row">


            @if (Model.Count() == 0)
            {
                <div class="alert alert-warning mt-3" role="alert">
                    No Categorie in the list ...!
                </div>
            }

            else
            {
                @foreach (var item in Model)
                {
                    <div class="col-lg-4 col-md-6">
                        <div class="room-item">
                            
                            <div class="ri-text">
                                <h4>Room Number @Html.DisplayFor(e => item.Room.Number)</h4>
                                <h3>@Html.DisplayFor(e => item.Room.Price)$<span>/Pernight</span></h3>
                                <table>
                                    <tbody>
                                        <tr>
                                            <td class="r-o">Person In Room</td>
                                            <td>@Html.DisplayFor(e => item.PeopleInRoom)</td>
                                        </tr>

                                        <tr>
                                            <td class="r-o">Start Date:</td>
                                            <td>@Html.DisplayFor(e => item.StartDate)</td>
                                        </tr>

                                        <tr>
                                            <td class="r-o">End Date:</td>
                                            <td>@Html.DisplayFor(e => item.EndDate)</td>
                                        </tr>
                                       
                                       
                                    </tbody>

                                </table>
                                <a asp-action="DeleteCart" asp-route-id="@item.Id" class="btn btn-danger">Cancel</a>
                                

                            </div>
                        </div>
                    </div>
                }
            }

            
            <div class="col-lg-12">
                <div class="room-pagination">
                    <a href="#">1</a>
                    <a href="#">2</a>
                    <a href="#">Next <i class="fa fa-long-arrow-right"></i></a>
                </div>
                
            </div>

            <div class="col-lg-12">
                <a asp-controller="Client" asp-action="Create" style="background-color: #dfa974;color: #ffff;" class="btn  float-right ">Submit Now</a>


            </div>
        </div>
    </div>
</section>
<!-- Rooms Section End -->